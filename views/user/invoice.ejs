<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <!-- Include CSS and JavaScript libraries here -->
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.0/html2pdf.bundle.min.js"></script>
</head>

<body>
    <div class="container invoice" id="invoice">
        <div class="row">
            <div class="col-xs-12">
                <div class="invoice-title">


                    <h2>Invoice</h2>
                    <h3 class="pull-right">Order <%=order.orderNumber%>
                    </h3>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xs-6">
                        <% const address=order.address[0] %>
                            <address>
                                <strong>Billed To:</strong><br>
                                <%=user.name%><br>
                                    <%= address.house %><br>
                                        <%= address.city %>,<%= address.district %>,<%= address.state %>,<br>
                                                    <%= address.post %>,<%= address.contact %>
                            </address>
                    </div>
                    <div class="col-xs-6 text-right">
                        <address>
                            <strong>Shipped To:</strong><br>
                            <%= address.name %><br>
                                <%= address.house %><br>
                                    <%= address.city %><br>
                                        <%= address.district %>,<%= address.state %>, <br>
                                                <%= address.post %>,<%= address.contact %>
                        </address>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <address>
                            <strong>Payment Method:</strong><br>
                            <%=order.payment%><br>
                                <%=user.email%>
                                    <% console.log(user)%>
                        </address>
                    </div>
                    <div class="col-xs-6 text-right">
                        <address>
                            <strong>Order Date:</strong><br>
                     <%=order.orderDate.toISOString().slice(0, 10)%>

                            <br><br>
                        </address>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Order summary</strong></h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <td><strong>Item</strong></td>
                                        <td class="text-center"><strong>Price</strong></td>
                                        <td class="text-center"><strong>Quantity</strong></td>
                                        <td class="text-right"><strong>Totals</strong></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- foreach ($order->lineItems as $line) or some such thing here -->

                                    <% let quantity;%>
                                    <% order.products.forEach((item) => { %>
                                      <% quantity= item.quantity %>
                                      <% }) %>
                                      <div><p></p></div>

                                                        <% order.productDetails.forEach(product=> { %>
                                                            <tr>
                                                               
                                                                    <!-- Define quantity outside the inner loop -->
                                                                    <td>
                                                                        <%= product.title %>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <%= product.price %>
                                                                    </td>

                                                                    <td class="text-center">
                                                                        <%=quantity%> 
                                                                    </td>

                                                                    <td class="text-right">
                                                                        <%= quantity*product.price %>
                                                                    </td>
                                                            </tr>
                                                            <% }) %>

                                                                <tr>
                                                                    <td class="thick-line"></td>
                                                                    <td class="thick-line"></td>
                                                                    <td class="thick-line text-center">
                                                                        <strong>Subtotal</strong></td>
                                                                    <td class="thick-line text-right">₹
                                                                        <%=order.totalAmount%>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="no-line"></td>
                                                                    <td class="no-line"></td>
                                                                    <td class="no-line text-center">
                                                                        <strong>Shipping</strong></td>
                                                                    <td class="no-line text-right">₹<%= order.shipping
                                                                            || 0 %>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="no-line"></td>
                                                                    <td class="no-line"></td>
                                                                    <td class="no-line text-center">
                                                                        <strong>Discount</strong></td>
                                                                    <td class="no-line text-right">₹<%= order.discount
                                                                            || 0 %>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="no-line"></td>
                                                                    <td class="no-line"></td>
                                                                    <td class="no-line text-center">
                                                                        <strong>Total</strong></td>
                                                                    <td class="no-line text-right">
                                                                        <%=order.totalAmount%>
                                                                    </td>

                                                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

  

    <a class="btn btn-info" style="position: absolute;top:30px; right:30px;" onclick="printDiv()">print</a>




    <style>
        .invoice-title h2,
        .invoice-title h3 {
            display: inline-block;
        }

        .table>tbody>tr>.no-line {
            border-top: none;
        }

        .table>thead>tr>.no-line {
            border-bottom: none;
        }

        .table>tbody>tr>.thick-line {
            border-top: 2px solid;
        }
    </style>


    <script>
 function printDiv() {
            // Assuming you have a div with id="content" that you want to print
            var content = document.getElementById('invoice').innerHTML;
            var originalContent = document.body.innerHTML;
            document.body.innerHTML = content;
            window.print();
            document.body.innerHTML = originalContent;
        }





        document.getElementById('downloadInvoice').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent the default behavior of the anchor tag (e.g., navigating to a URL).

            // Define the element you want to convert to PDF (e.g., the entire invoice container).
            const element = document.querySelector('.container');

            // Define the PDF options (optional).
            const options = {
                margin: 10,
                filename: 'invoice.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
            };

            // Generate the PDF.
            html2pdf().from(element).set(options).outputPdf().then(function (pdf) {
                // Save or download the PDF.
                pdf.save();
            });
        });
    </script>

</body>

</html>