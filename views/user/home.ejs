<script>
  $(document).ready(function(){
  var totalImages = $('.owl-carousel .carousel-item').length;

  $('.owl-carousel').owlCarousel({
    items: totalImages, // Set the number of items dynamically based on total images
    loop: true, // Infinite loop
    margin: 10, // Space between items
    nav: true, // Navigation arrows
    responsive:{
      0:{
        items:1
      },
      600:{
        items: totalImages >= 3 ? 3 : totalImages // Set to a maximum of 3 if there are fewer than 3 images
      }
    }
  });
});


</script>
