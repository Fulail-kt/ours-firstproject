                              { %> <% quantity=item.quantity %>
                                <% }) %>
                                  <% order.productDetails.forEach(product=> { %>
                                    <p class="text-white mb-0" style="font-size: 12px">
                                      <%= product.title %>
                                    </p>
                                    <p class="text-white mb-0 small">
