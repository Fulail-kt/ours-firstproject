                                    <hr class="m-0">
            
                                    <% }); %>
                        </div>
                      </div>
                      <div class="col-md-3 text-center d-flex align-items-center justify-content-center">
                        <p class="text-white mb-0 small">
                          â‚¹ <%=order.totalAmount %>
                          <%if(order.discount){%>
                            (-<%=order.discount %>)
                          <%}%>
                        </p>
                      </div>
                      <div class="col-md text-center d-flex align-items-center justify-content-center">
                        <% const address=order.address[0] %>
                          <p class="text-white mb-0 small">
                            Ship to: <%= address.name %> <br />
                              <%= address.house %><br />
                                <%= address.city %>
                                  <%= address.district %>,<br />
                                    <%= address.state %>, <%= address.post %>,<%= address.contact %>
                          </p>
                      </div>
                    </div>
            
                    <div class="d-flex justify-content-around">
                      <p id="cancelptag"
                        class="d-flex justify-content-center rounded <%= order.status==='cancelled'? 'bg-danger w-100':'' %>">
                        <%= order.status %>
                      </p>
                      <% if (order.status==="pending" ) { %>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                        data-bs-target="#refundmodal<%=order._id %>">
                          Cancel
                        </button>
                        <% } %>
                          <% if (order.status==="delivered" ) { %>
                            <% const orderDate=new Date(order.orderDate); %>
                              <% const currentDate=new Date(); %>
                                <% const timeDifference=currentDate - orderDate; %>
                                  <% const daysDifference=Math.floor(timeDifference / (1000 * 60 * 60 * 24)); %>
                                    <% if (daysDifference <=7) { %>
                                      <a id="retrun" onclick="returnRequest('<%=order._id%>')" class="btn btn-outline-warning">Return</a>
                                      <% } %>
                                        <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>


            


            <div class="modal fade" id="refundmodal<%= order._id %>" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered d-flex justify-content-center">
                <div class="modal-content " style="width: 300px;">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Modal 1</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div>

                      <input type="radio" name="refund" id="" value="wallet">
                      <input type="radio" name="refund" id="" value="bank">
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-primary"  onclick="cancelOrder('<%= order._id %>')">Open second modal</button>
                  </div>
                </div>
              </div>
            </div>






            <% }) %>
              <% } else { %>
                <div class="w-100 h-100 d-flex justify-content-center align-items-center">
                  <div>
                <p>No orders found.</p>
              </div>
            </div>

            <% } %>
          </section>
        </div>

        
      </div>
    </div>


