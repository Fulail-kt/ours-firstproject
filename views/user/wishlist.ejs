              <div class="row">
                <%console.log(wishlist)%>
                <% if (wishlist && wishlist.wishlist.length > 0) { %>
                  <% wishlist.wishlist.forEach(item => { %>
                    <div class="col-md-4 col-sm-6 col-12">
                      <div class="card mt-5" style="width: 190px; height: 500px">
                        <img src="/uploads/<%= item.product.images[0] %>" style="height: 300px;" class="card-img-top img-thumbnail" alt="Product Image" >
                        <div class="card-body text-center">
