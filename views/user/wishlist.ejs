                                    style="font-size: 13.2px; border: 1px solid #bdbdbdda; padding: 1px; width: 26px;">
                                    <input type="radio" required name="size" value="<%=size[i]%>" class="size-input"
                                        style="display: none;">
                                    <%=size[i]%>
                                </label>
                            <% } %>
                        </div>
                        
